package Educative.LibraryManagement.system;

import Educative.LibraryManagement.accounts.*;
import Educative.LibraryManagement.bookdetails.*;
import Educative.LibraryManagement.catalogs.*;

import java.time.LocalDate;
import java.util.*;

public class LibraryFacade {
    private Catalog catalog;
    private List<Member> members;
    private List<Librarian> librarians;
    private List<BookItem> bookItems;
    private List<BookReservation> reservations;
    private List<BookLending> lendings;

    public LibraryFacade() {
        catalog = new Catalog();
        members = new ArrayList<>();
        librarians = new ArrayList<>();
        bookItems = new ArrayList<>();
        reservations = new ArrayList<>();
        lendings = new ArrayList<>();
    }

    public void addBook(Book book) {
        catalog.addBook(book);
    }

    public List<Book> searchByTitle(String title) {
        return catalog.searchByTitle(title);
    }

    public List<Book> searchByAuthor(String author) {
        return catalog.searchByAuthor(author);
    }

    public List<Book> searchBySubject(String subject) {
        return catalog.searchBySubject(subject);
    }

    public List<Book> searchByPublicationDate(LocalDate date) {
        return catalog.searchByPublicationDate(date);
    }

    public boolean reserveBookItem(String memberId, String bookItemId) { /* logic */
        return true;
    }

    public boolean checkoutBookItem(String memberId, String bookItemId) { /* logic */
        return true;
    }

    public boolean returnBookItem(String memberId, String bookItemId) { /* logic */
        return true;
    }
}
